<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.care.mc.mybatis.MenuMapper">
	<resultMap type="com.care.mc.dto.MenuInfoDTO" id="menuInfo">
		<id property="name" column="name" />
		<result property="engName" column="engName" />
		<result property="mainImage" column="mainImage" />
		<result property="explanation" column="explanation" />
		<result property="value" column="value" />
		<result property="menuSize" column="menuSize" />
	</resultMap>
	<select id="selectBoardCount" resultType="Integer" parameterType="HashMap">
		select count(*) from menu_info where value like #{value} and menuSize=#{size}
	</select>
	
	<select id="getList" resultMap="menuInfo" parameterType="HashMap">
		select B.* from(select rownum rn, A.* from
		(select * from menu_info)A)B where value like #{value} and menuSize=#{size} and rn between #{start} and #{end}
	</select>
	<select id="menuInfo" resultMap="menuInfo">
		select * from menu_Info where engName=#{engName}
	</select>

</mapper>